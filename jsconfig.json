{
    "compilerOptions": {
      "baseUrl": ".",
      "checkJs": true,
      "paths": {
        "@/*": ["src/*"]
      },
      "jsx": "react",
      "module": "es2020",
      "target": "es2020",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules", "build", "dist"]
  }